{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Ruleset for material is 'pool of specimens'.",
  "title": "FAANG sample metadata rules for 'specimen from organism'",
  "name": "faang_samples_purified_cells.metadata_rules",
  "$async": true,
  "type": "object",
  "required": ["cell_type", "purification_protocol", "derived_from"],
  "properties": {
    "describedBy": {
      "const": "https://raw.githubusercontent.com/FAANG/dcc-metadata/hca/json_schema/type/samples/faang_samples_purified_cells.metadata_rules.json"
    },
    "schema_version": {
      "description": "The version number of the schema in major.minor.patch format.",
      "type": "string",
      "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
      "example": "4.6.1"
    },
    "samples_core": {
      "description": "Core samples-level information.",
      "type": "object",
      "$ref": "https://raw.githubusercontent.com/FAANG/dcc-metadata/hca/json_schema/core/samples/faang_samples_core.metadata_rules.json"
    },
    "markers": {
      "type": "object",
      "name": "markers",
      "description": "Markers used to isolate and identify the cell type (e.g. for FACS sorted cells).",
      "required": ["value"],
      "properties": {
        "value": {
          "type": "string"
        },
        "mandatory": {
          "const": "optional"
        }
      }
    },
    "cell_type": {
      "type": "array",
      "name": "cell type",
      "description": "Provide a cell type from the CL ontology.",
      "items": {
        "type": "object",
        "required": ["text", "term"],
        "properties": {
          "text": {
            "type": "string"
          },
          "term": {
            "oneOf": [
              {
                "type": "string",
                "graph_restriction": {
                  "ontologies": ["obo:cl"],
                  "classes": ["CL:0000000"],
                  "relations": ["rdfs:subClassOf"],
                  "direct": false,
                  "include_self": true
                }
              },
              {
                "const": "restricted access"
              }
            ]
          },
          "mandatory": {
            "const": "mandatory"
          },
          "ontology_name": {
            "const": "CL"
          }
        }
      }
    },
    "purification_protocol": {
      "type": "object",
      "name": "purification protocol",
      "description": "Link to protocol describing how the cells were purified.",
      "required": ["value"],
      "properties": {
        "value": {
          "oneOf": [
            {
              "type": "string",
              "format": "uri"
            },
            {
              "const": "restricted access"
            }
          ]
        },
        "mandatory": {
          "const": "mandatory"
        }
      }
    },
    "derived_from": {
      "type": "object",
      "name": "Derived from",
      "description": "Sample name or BioSample ID for a specimen record.",
      "required": ["value"],
      "properties": {
        "value": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "const": "restricted access"
            }
          ]
        },
        "mandatory": {
          "const": "mandatory"
        }
      }
    }
  }
}