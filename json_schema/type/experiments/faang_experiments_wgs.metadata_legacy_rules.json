{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Ruleset for assay type is 'whole genome sequencing assay'.",
  "title": "FAANG experiment metadata rules for 'whole genome sequencing assay'",
  "name": "faang_experiments_wgs.metadata_legacy_rules",
  "$async": true,
  "type": "object",
  "required": [
    "experiment_target"
  ],
  "properties": {
    "describedBy": {
      "const": "https://raw.githubusercontent.com/FAANG/dcc-metadata/hca/json_schema/type/experiments/faang_experiments_wgs.metadata_legacy_rules.json"
    },
    "schema_version": {
      "description": "The version number of the schema in major.minor.patch format.",
      "type": "string",
      "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
      "example": "4.6.1"
    },
    "experiments_core": {
      "description": "Core experiments-level information.",
      "type": "object",
      "$ref": "https://raw.githubusercontent.com/FAANG/dcc-metadata/hca/json_schema/core/experiments/faang_experiments_core.metadata_legacy_rules.json"
    },
    "experiment_target": {
      "type": "object",
      "name": "experiment target",
      "description": "What the experiment was trying to find, list the text rather than ontology link, please use 'input DNA'.",
      "required": ["text", "term"],
      "properties": {
        "text": {
          "oneOf": [
            {"type": "string"},
            {"const": "restricted access"}
          ]
        },
        "term": {
          "type": "string",
          "enum": [
            "EFO:0005031",
            "restricted access"
          ]
        },
        "mandatory": {
          "const": "mandatory"
        },
        "ontology_name": {
          "const": "EFO"
        }
      }
    },
    "library_generation_pcr_product_isolation_protocol": {
      "type": "object",
      "name": "library generation pcr product isolation protocol",
      "description": "Link to the protocol for isolating PCR products used for library generation.",
      "required": ["value"],
      "properties": {
        "value": {
          "oneOf": [
            {
              "type": "string",
              "format": "uri"
            },
            {
              "type": "string",
              "enum": [
                "not applicable",
                "not collected",
                "not provided",
                "restricted access"
              ]
            }
          ]
        },
        "mandatory": {
          "const": "recommended"
        }
      }
    },
    "library_generation_protocol": {
      "type": "object",
      "name": "library generation protocol",
      "description": "Link to the protocol used to generate the library.",
      "required": ["value"],
      "properties": {
        "value": {
          "oneOf": [
            {
              "type": "string",
              "format": "uri"
            },
            {
              "type": "string",
              "enum": [
                "not applicable",
                "not collected",
                "not provided",
                "restricted access"
              ]
            }
          ]
        },
        "mandatory": {
          "const": "recommended"
        }
      }
    },
    "library_selection": {
      "type": "object",
      "name": "library selection",
      "description": "State whether reduced representation was used in the protocol.",
      "required": ["value"],
      "properties": {
        "value": {
          "type": "string",
          "enum": [
            "reduced representation",
            "none"
          ]
        },
        "mandatory": {
          "const": "optional"
        }
      }
    }
  }
}