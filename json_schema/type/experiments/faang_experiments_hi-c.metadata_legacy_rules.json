{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Ruleset for assay type is 'Hi-C'.",
  "title": "FAANG experiment metadata rules for 'Hi-C'",
  "name": "faang_experiments_hi-c",
  "$async": true,
  "type": "object",
  "required": [
    "experiment_target"
  ],
  "properties": {
    "experiment_target": {
      "type": "object",
      "name": "experiment target",
      "description": "What the experiment was trying to find, list the text rather than ontology link, please use 'chromatin'.",
      "properties": {
        "term": {
          "type": "string",
          "graph_restriction": {
            "ontologies": ["obo:go"],
            "classes": ["GO:0000785"],
            "relations": ["rdfs:subClassOf"],
            "direct": false,
            "include_self": true
          }
        },
        "text": {
          "type": "string"
        },
        "mandatory": {
          "const": "mandatory"
        }
      }
    },
    "restriction_enzyme": {
      "type": "object",
      "name": "restriction enzyme",
      "description": "Restriction enzyme used.",
      "properties": {
        "value": {
          "type": "string"
        },
        "mandatory": {
          "const": "recommended"
        }
      }
    },
    "restriction_site": {
      "type": "object",
      "name": "restriction_site",
      "description": "Restriction site targeted.",
      "properties": {
        "value": {
          "type": "string"
        },
        "mandatory": {
          "const": "recommended"
        }
      }
    },
    "hi-c_protocol": {
      "type": "object",
      "name": "hi-c protocol",
      "description": "Link to the protocol used for Hi-C experiment.",
      "properties": {
        "value": {
          "type": "string",
          "format": "uri"
        },
        "mandatory": {
          "const": "recommended"
        }
      }
    }
  }
}