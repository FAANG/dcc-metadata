{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Ruleset for assay type is 'Hi-C'.",
  "title": "FAANG experiment metadata rules for 'Hi-C'",
  "name": "faang_experiments_hi-c.metadata_legacy_rules",
  "$async": true,
  "type": "object",
  "required": [
    "experiment_target"
  ],
  "properties": {
    "describedBy": {
      "const": "https://github.com/FAANG/faang-metadata/blob/master/docs/faang_experiment_metadata.md"
    },
    "schema_version": {
      "description": "The version number of the schema in major.minor.patch format.",
      "type": "string",
      "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
      "example": "4.6.1"
    },
    "experiments_core": {
      "description": "Core samples-level information",
      "type": "object",
      "$ref": "core/experiments/faang_experiments_core.metadata_legacy_rules.json"
    },
    "experiment_target": {
      "type": "object",
      "name": "experiment target",
      "description": "What the experiment was trying to find, list the text rather than ontology link, please use 'chromatin'.",
      "required": ["term", "text"],
      "properties": {
        "term": {
          "const": "GO:0000785"
        },
        "text": {
          "type": "string"
        },
        "mandatory": {
          "const": "mandatory"
        },
        "ontology_name":{
          "const": "GO"
        }
      }
    },
    "restriction_enzyme": {
      "type": "object",
      "name": "restriction enzyme",
      "description": "Restriction enzyme used.",
      "required": ["value"],
      "properties": {
        "value": {
          "type": "string"
        },
        "mandatory": {
          "const": "recommended"
        }
      }
    },
    "restriction_site": {
      "type": "object",
      "name": "restriction_site",
      "description": "Restriction site targeted.",
      "required": ["value"],
      "properties": {
        "value": {
          "type": "string"
        },
        "mandatory": {
          "const": "recommended"
        }
      }
    },
    "hi-c_protocol": {
      "type": "object",
      "name": "hi-c protocol",
      "description": "Link to the protocol used for Hi-C experiment.",
      "required": ["value"],
      "properties": {
        "value": {
          "type": "string",
          "format": "uri"
        },
        "mandatory": {
          "const": "recommended"
        }
      }
    }
  }
}