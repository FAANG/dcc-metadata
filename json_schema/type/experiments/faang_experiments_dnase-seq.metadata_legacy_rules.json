{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Ruleset for assay type is 'DNase-Hypersensitivity seq'.",
  "title": "FAANG experiment metadata rules for 'DNase-Hypersensitivity seq'",
  "name": "faang_experiments_dnase-seq.metadata_legacy_rules",
  "$async": true,
  "type": "object",
  "required": ["experiment_target"],
  "properties": {
    "describedBy": {
      "const": "https://raw.githubusercontent.com/FAANG/dcc-metadata/hca/json_schema/type/experiments/faang_experiments_dnase-seq.metadata_legacy_rules.json"
    },
    "schema_version": {
      "description": "The version number of the schema in major.minor.patch format.",
      "type": "string",
      "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
      "example": "4.6.1"
    },
    "experiments_core": {
      "description": "Core experiments-level information.",
      "type": "object",
      "$ref": "https://raw.githubusercontent.com/FAANG/dcc-metadata/hca/json_schema/core/experiments/faang_experiments_core.metadata_legacy_rules.json"
    },
    "experiment_target": {
      "type": "object",
      "name": "experiment target",
      "description": "What the experiment was trying to find, list the text rather than ontology link, please use 'open_chromatin_region'.",
      "required": ["text", "term"],
      "properties": {
        "text": {
          "type": "string"
        },
        "term": {
          "oneOf": [
            {"const": "SO:0001747"},
            {"const": "restricted access"}
          ]
        },
        "mandatory": {
          "const": "mandatory"
        },
        "ontology_name": {
          "const": "SO"
        }
      }
    },
    "dnase_protocol": {
      "type": "object",
      "name": "dnase protocol",
      "description": "Link to the protocol used for DNase treatment.",
      "required": ["value"],
      "properties": {
        "value": {
          "oneOf": [
            {
              "type": "string",
              "format": "uri"
            },
            {
              "type": "string",
              "enum": [
                "not applicable",
                "not collected",
                "not provided",
                "restricted access"
              ]
            }
          ]
        },
        "mandatory": {
          "const": "recommended"
        }
      }
    }
  }
}