{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Ruleset for assay type is 'Hi-C'.",
  "title": "FAANG experiment metadata rules for 'Hi-C'",
  "name": "faang_experiments_hi-c",
  "$async": true,
  "type": "object",
  "required": [
    "experiment_target",
    "restriction_enzyme",
    "restriction_site",
    "hi-c_protocol"
  ],
  "properties": {
    "describedBy": {
      "description": "The URL reference to the schema.",
      "type": "string",
      "pattern" : "^(http|https)://schema.(.*?)humancellatlas.org/core/biomaterial/(([0-9]{1,}.[0-9]{1,}.[0-9]{1,})|([a-zA-Z]*?))/biomaterial_core"
    },
    "schema_version": {
      "description": "The version number of the schema in major.minor.patch format.",
      "type": "string",
      "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
      "example": "4.6.1"
    },
    "experiment_target": {
      "type": "object",
      "name": "experiment target",
      "description": "What the experiment was trying to find, list the text rather than ontology link, please use 'chromatin'.",
      "properties": {
        "term": {
          "type": "string",
          "graph_restriction": {
            "ontologies": ["obo:go"],
            "classes": ["GO:0000785"],
            "relations": ["rdfs:subClassOf"],
            "direct": false,
            "include_self": true
          }
        },
        "text": {
          "type": "string"
        },
        "mandatory": {
          "const": "mandatory"
        }
      }
    },
    "restriction_enzyme": {
      "type": "object",
      "name": "restriction enzyme",
      "description": "Restriction enzyme used.",
      "properties": {
        "value": {
          "type": "string"
        },
        "mandatory": {
          "const": "mandatory"
        }
      }
    },
    "restriction_site": {
      "type": "object",
      "name": "restriction_site",
      "description": "Restriction site targeted.",
      "properties": {
        "value": {
          "type": "string"
        },
        "mandatory": {
          "const": "mandatory"
        }
      }
    },
    "hi-c_protocol": {
      "type": "object",
      "name": "hi-c protocol",
      "description": "Link to the protocol used for Hi-C experiment.",
      "properties": {
        "value": {
          "type": "string",
          "format": "uri"
        },
        "mandatory": {
          "const": "mandatory"
        }
      }
    }
  }
}