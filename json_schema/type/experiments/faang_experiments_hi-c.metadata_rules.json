{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Ruleset for assay type is 'Hi-C'.",
  "title": "FAANG experiment metadata rules for 'Hi-C'",
  "name": "faang_experiments_hi-c.metadata_rules",
  "$async": true,
  "type": "object",
  "required": [
    "experiment_target",
    "restriction_enzyme",
    "restriction_site",
    "hi-c_protocol"
  ],
  "properties": {
    "describedBy": {
      "const": "https://raw.githubusercontent.com/FAANG/dcc-metadata/hca/json_schema/type/experiments/faang_experiments_hi-c.metadata_rules.json"
    },
    "schema_version": {
      "description": "The version number of the schema in major.minor.patch format.",
      "type": "string",
      "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
      "example": "4.6.1"
    },
    "experiments_core": {
      "description": "Core experiments-level information.",
      "type": "object",
      "$ref": "https://raw.githubusercontent.com/FAANG/dcc-metadata/hca/json_schema/core/experiments/faang_experiments_core.metadata_rules.json"
    },
    "experiment_target": {
      "type": "object",
      "name": "experiment target",
      "description": "What the experiment was trying to find, list the text rather than ontology link, please use 'chromatin'.",
      "required": ["text", "term"],
      "properties": {
        "text": {
          "type": "string"
        },
        "term": {
          "oneOf": [
            {"const": "GO:0000785"},
            {"const": "restricted access"}
          ]
        },
        "mandatory": {
          "const": "mandatory"
        },
        "ontology_name": {
          "const": "GO"
        }
      }
    },
    "restriction_enzyme": {
      "type": "object",
      "name": "restriction enzyme",
      "description": "Restriction enzyme used.",
      "required": ["value"],
      "properties": {
        "value": {
          "type": "string"
        },
        "mandatory": {
          "const": "mandatory"
        }
      }
    },
    "restriction_site": {
      "type": "object",
      "name": "restriction_site",
      "description": "Restriction site targeted.",
      "required": ["value"],
      "properties": {
        "value": {
          "type": "string"
        },
        "mandatory": {
          "const": "mandatory"
        }
      }
    },
    "hi-c_protocol": {
      "type": "object",
      "name": "hi-c protocol",
      "description": "Link to the protocol used for Hi-C experiment.",
      "required": ["value"],
      "properties": {
        "value": {
          "oneOf": [
            {
              "type": "string",
              "format": "uri"
            },
            {"const": "restricted access"}
          ]
        },
        "mandatory": {
          "const": "mandatory"
        }
      }
    }
  }
}