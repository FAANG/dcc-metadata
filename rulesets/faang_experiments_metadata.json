{
    "description": "Validation rules for the FAANG project. Rules are divided into one group that is applied to all experiments, and additional groups based on the experiment type.",
    "name": "FAANG experiment metadata rules",
    "rule_groups": [
        {
            "name": "standard",
            "rules": [
                {
                    "mandatory": "mandatory",
                    "name": "assay type",
                    "type": "ontology_text",
                    "valid_ancestor_uris": [
                        "http://www.ebi.ac.uk/efo/EFO_0002773"
                    ]
                },
                {
                    "mandatory": "mandatory",
                    "name": "experiment target",
                    "type": "ontology_text",
                    "valid_ancestor_uris": [
                        "http://purl.obolibrary.org/obo/SO_0001700",
                        "http://www.ebi.ac.uk/efo/EFO_0005031",
                        "http://purl.obolibrary.org/obo/OBI_0001468",
                        "http://purl.obolibrary.org/obo/OBI_0302716",
                        "http://purl.obolibrary.org/obo/OBI_0001876"
                    ]
                },
                {
                    "mandatory": "optional",
                    "name": "sample_storage",
                    "type": "text",
                    "valid_values": [
                        "frozen, liquid nitrogen",
                        "frozen, -70 freezer",
                        "frozen, vapor phase",
                        "RNAlater, frozen",
                        "paraffin block",
                        "cut slide",
                        "fresh"
                    ]
                },
                {
                    "mandatory": "mandatory",
                    "name": "sample storage processing",
                    "type": "text",
                    "valid_values": [
                        "cryopreservation in liquid nitrogen (dead tissue)",
                                       "cryopreservation in dry ice (dead tissue)",
                                       "cryopreservation of live cells in liquid nitrogen",
                                       "cryopreservation, other",
                                       "formalin fixed, unbuffered",
                                       "formalin fixed, buffered",
                                       "formalin fixed and paraffin embedded",
                                       "fresh"
                    ]
                },
                {
                    "mandatory": "mandatory",
                    "name": "sampling to preparation interval",
                    "type": "number",
                    "valid_units": [
                        "minutes",
                        "hours",
                        "days",
                        "weeks",
                        "years"
                    ]
                }
                {
                    "mandatory": "mandatory",
                    "name": "experimental protocol",
                    "type": "protocol"
                }
                * `experimental protocol` (*protocol*) a description of the experiment protocol.
                
            ]
        }
    ]
}