{
  "description": "Validation rules for the FAANG project. Rules are divided into one group that is applied to all samples, and additional groups based on the sample type. In addition to rules defined individually, attribute names are imported from the VT, ATOL and EOL ontologies.",
  "name": "FAANG sample metadata rules",
  "rule_groups": [
    {
      "name": "standard",
      "rules": [
        {
          "mandatory": "optional",
          "name": "Sample Description",
          "type": "text"
        },
        {
          "_comment": "Covers organism, tissue specimen, cell specimen, pool of specimens, cell culture",
          "mandatory": "mandatory",
          "name": "Material",
          "type": "ontology_id",
          "valid_terms": [
            {
              "ontology_name": "OBI",
              "term_iri": "http://purl.obolibrary.org/obo/OBI_0100026",
              "allow_descendants": false,
              "include_root": true
            },
            {
              "ontology_name": "OBI",
              "term_iri": "http://purl.obolibrary.org/obo/OBI_0001479",
              "allow_descendants": false,
              "include_root": true
            },
            {
              "ontology_name": "OBI",
              "term_iri": "http://purl.obolibrary.org/obo/OBI_0001468",
              "allow_descendants": false,
              "include_root": true
            },
            {
              "ontology_name": "OBI",
              "term_iri": "http://purl.obolibrary.org/obo/OBI_0302716",
              "allow_descendants": false,
              "include_root": true
            },
            {
              "ontology_name": "OBI",
              "term_iri": "http://purl.obolibrary.org/obo/OBI_0001876",
              "allow_descendants": false,
              "include_root": true
            }
          ],
          "valid_values": [
            "organism",
            "tissue specimen",
            "cell specimen",
            "pool of specimens",
            "cell culture"
          ]
        },
        {
          "mandatory": "mandatory",
          "name": "project",
          "type": "text",
          "valid_values": [
            "FAANG"
          ]
        },
        {
          "mandatory": "optional",
          "name": "availability",
          "type": "text"
        }
      ]
    },
    {
      "condition": {
        "attribute_value_match": {
          "Material": [
            "organism"
          ]
        }
      },
      "name": "animal",
      "imports": [
        {
          "rule_prefix": "",
          "term": {
            "term_iri": "http://purl.obolibrary.org/obo/VT_0000001",
            "ontology_name": "VT",
            "allow_descendants": true,
            "leaf_only": true,
            "include_root": false
          }
        },
        {
          "rule_prefix": "",
          "term": {
            "term_iri": "http://purl.org/obo/owlATOL_0000002",
            "ontology_name": "ATOL",
            "allow_descendants": true,
            "leaf_only": true,
            "include_root": false
          }
        },
        {
          "rule_prefix": "",
          "term": {
            "term_iri": "http://purl.org/obo/owlEOL_0000001",
            "ontology_name": "EOL",
            "allow_descendants": true,
            "leaf_only": true,
            "include_root": false
          }
        },
        {
          "rule_prefix": "",
          "term": {
            "term_iri": "http://purl.obolibrary.org/obo/MP_0000001",
            "ontology_name": "MP",
            "allow_descendants": true,
            "leaf_only": true,
            "include_root": false
          }
        }
      ],
      "rules": [
        {
          "mandatory": "mandatory",
          "name": "Organism",
          "type": "ncbi_taxon",
          "valid_terms": [
            {
              "term_iri": "http://purl.obolibrary.org/obo/NCBITaxon_1",
              "ontology_name": "NCBITaxon"
            }
          ]
        },
        {
          "mandatory": "mandatory",
          "name": "Sex",
          "type": "ontology_id",
          "valid_terms": [
            {
              "term_iri": "http://purl.obolibrary.org/obo/PATO_0000047",
              "ontology_name": "PATO"
            }
          ]
        },
        {
          "mandatory": "recommended",
          "name": "birth date",
          "type": "date",
          "valid_units": [
            "YYYY-MM-DD",
            "YYYY-MM",
            "YYYY"
          ]
        },
        {
          "mandatory": "mandatory",
          "name": "breed",
          "type": "faang_breed",
          "valid_terms": [
            {
              "term_iri": "http://purl.obolibrary.org/obo/LBO_0000000",
              "ontology_name": "LBO",
              "leaf_only": true
            }
          ]
        },
        {
          "mandatory": "mandatory",
          "allow_multiple": 1,
          "name": "health status",
          "type": "ontology_id",
          "valid_terms": [
            {
              "term_iri": "http://purl.obolibrary.org/obo/PATO_0000461",
              "ontology_name": "PATO"
            },
            {
              "term_iri": "http://www.ebi.ac.uk/efo/EFO_0000408",
              "ontology_name": "EFO"
            }
          ]
        },
        {
          "mandatory": "optional",
          "name": "birth location",
          "type": "text"
        },
        {
          "mandatory": "optional",
          "name": "birth location longitude",
          "type": "number",
          "valid_units": [
            "decimal degrees"
          ]
        },
        {
          "mandatory": "optional",
          "name": "birth location latitude",
          "type": "number",
          "valid_units": [
            "decimal degrees"
          ]
        },
        {
          "allow_multiple": 1,
          "mandatory": "optional",
          "name": "environmental conditions",
          "type": "ontology_id",
          "valid_terms": [
            {
              "term_iri": "http://purl.org/obo/owlEOL_0000001",
              "ontology_name": "EOL"
            }
          ]
        },
        {
          "mandatory": "optional",
          "name": "birth weight",
          "type": "number",
          "valid_units": [
            "kilograms"
          ]
        },
        {
          "mandatory": "optional",
          "name": "placental weight",
          "type": "number",
          "valid_units": [
            "kilograms"
          ]
        },
        {
          "mandatory": "optional",
          "name": "pregnancy length",
          "type": "number",
          "valid_units": [
            "days",
            "weeks",
            "months"
          ]
        },
        {
          "mandatory": "optional",
          "name": "delivery timing",
          "type": "text",
          "valid_values": [
            "early parturition",
            "full-term parturition",
            "delayed parturition"
          ]
        },
        {
          "mandatory": "optional",
          "name": "delivery ease",
          "type": "text",
          "valid_values": [
            "normal autonomous delivery",
            "c-section",
            "vetinarian assisted"
          ]
        },
        {
          "allow_multiple": 1,
          "mandatory": "optional",
          "name": "Child of",
          "type": "relationship",
          "condition": {
            "attribute_value_match": {
              "Material": [
                "organism"
              ]
            }
          }
        },
        {
          "mandatory": "optional",
          "name": "pedigree",
          "type": "uri_value"
        }
      ]
    },
    {
      "condition": {
        "attribute_value_match": {
          "Material": [
            "tissue specimen"
          ]
        }
      },
      "name": "specimen",
      "imports": [
        {
          "rule_prefix": "",
          "term": {
            "term_iri": "http://purl.org/obo/owlATOL_0000002",
            "ontology_name": "ATOL",
            "allow_descendants": true,
            "leaf_only": true,
            "include_root": false
          }
        }
      ],
      "rules": [
        {
          "mandatory": "mandatory",
          "name": "specimen collection date",
          "type": "date",
          "valid_units": [
            "YYYY-MM-DD",
            "YYYY-MM",
            "YYYY"
          ]
        },
        {
          "mandatory": "mandatory",
          "name": "animal age at collection",
          "type": "number",
          "valid_units": [
            "years",
            "months",
            "weeks",
            "days"
          ]
        },
        {
          "mandatory": "mandatory",
          "name": "developmental stage",
          "type": "ontology_id",
          "valid_terms": [
            {
              "term_iri": "http://www.ebi.ac.uk/efo/EFO_0000399",
              "ontology_name": "EFO"
            }
          ]
        },
        {
          "allow_multiple": 1,
          "mandatory": "mandatory",
          "name": "health status at collection",
          "type": "ontology_id",
          "valid_terms": [
            {
              "term_iri": "http://purl.obolibrary.org/obo/PATO_0000461",
              "ontology_name": "PATO"
            },
            {
              "term_iri": "http://www.ebi.ac.uk/efo/EFO_0000408",
              "ontology_name": "EFO"
            }
          ]
        },
        {
          "mandatory": "mandatory",
          "name": "tissue",
          "type": "ontology_id",
          "valid_terms": [
            {
              "term_iri": "http://purl.obolibrary.org/obo/UBERON_0001062",
              "ontology_name": "UBERON"
            },
            {
              "term_iri": "http://purl.obolibrary.org/obo/BTO_0000042",
              "ontology_name": "BTO"
            }
          ]
        },
        {
          "mandatory": "mandatory",
          "name": "specimen collection protocol",
          "type": "uri_value"
        },
        {
          "mandatory": "optional",
          "name": "fasted status",
          "type": "enum",
          "valid_values": [
            "fed",
            "fasted",
            "unknown"
          ]
        },
        {
          "mandatory": "optional",
          "name": "number of pieces",
          "type": "number",
          "valid_units": [
            "count"
          ]
        },
        {
          "mandatory": "optional",
          "name": "specimen volume",
          "type": "number",
          "valid_units": [
            "square centimeters",
            "liters",
            "milliliters"
          ]
        },
        {
          "mandatory": "optional",
          "name": "specimen size",
          "type": "number",
          "valid_units": [
            "meters",
            "centimeters",
            "millimeters",
            "square meters",
            "square centimeters",
            "square millimeters"
          ]
        },
        {
          "mandatory": "optional",
          "name": "specimen weight",
          "type": "number",
          "valid_units": [
            "grams",
            "kilograms"
          ]
        },
        {
          "allow_multiple": 1,
          "mandatory": "optional",
          "name": "specimen picture url",
          "type": "uri_value"
        },
        {
          "mandatory": "optional",
          "name": "gestational age at sample collection",
          "type": "number",
          "valid units": [
            "days",
            "weeks"
          ]
        },
        {
          "mandatory": "mandatory",
          "name": "Derived from",
          "type": "relationship",
          "condition": {
            "attribute_value_match": {
              "Material": [
                "organism"
              ]
            }
          }
        }
      ]
    },
    {
      "condition": {
        "attribute_value_match": {
          "Material": [
            "cell specimen"
          ]
        }
      },
      "name": "purified cells",
      "rules": [
        {
          "mandatory": "optional",
          "name": "markers",
          "type": "text"
        },
        {
          "mandatory": "mandatory",
          "name": "cell type",
          "type": "ontology_id",
          "allow_multiple": true,
          "valid_terms": [
            {
              "term_iri": "http://purl.obolibrary.org/obo/CL_0000000",
              "ontology_name": "CL"
            }
          ]
        },
        {
          "mandatory": "mandatory",
          "name": "purification protocol",
          "type": "uri_value"
        },
        {
          "mandatory": "mandatory",
          "name": "Derived from",
          "type": "relationship",
          "condition": {
            "attribute_value_match": {
              "Material": [
                "tissue specimen"
              ]
            }
          }
        }
      ]
    },
    {
      "condition": {
        "attribute_value_match": {
          "Material": [
            "cell culture"
          ]
        }
      },
      "name": "cell culture",
      "rules": [
        {
          "mandatory": "mandatory",
          "name": "culture type",
          "type": "ontology_id",
          "valid_terms": [
            {
              "term_iri": "http://purl.obolibrary.org/obo/BTO_0000214",
              "ontology_name": "BTO"
            }
          ]
        },
        {
          "mandatory": "mandatory",
          "name": "cell type",
          "type": "ontology_id",
          "valid_terms": [
            {
              "term_iri": "http://purl.obolibrary.org/obo/CL_0000000",
              "ontology_name": "CL"
            }
          ]
        },
        {
          "mandatory": "mandatory",
          "name": "cell culture protocol",
          "type": "uri_value"
        },
        {
          "mandatory": "mandatory",
          "name": "culture conditions",
          "type": "text"
        },
        {
          "mandatory": "mandatory",
          "name": "number of passages",
          "type": "number"
        },
        {
          "mandatory": "mandatory",
          "name": "Derived from",
          "type": "relationship",
          "condition": {
            "attribute_value_match": {
              "Material": [
                "tissue specimen",
                "cell specimen"
              ]
            }
          }
        }
      ]
    }
  ]
}